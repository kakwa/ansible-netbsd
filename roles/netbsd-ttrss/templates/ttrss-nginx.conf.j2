server {
    listen 80;
    listen [::]:80;
    server_name {{ ttrss_domain }};

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ ttrss_domain }};

    # SSL configuration
    ssl_certificate /usr/local/etc/letsencrypt/live/{{ ttrss_domain }}/fullchain.pem;
    ssl_certificate_key /usr/local/etc/letsencrypt/live/{{ ttrss_domain }}/privkey.pem;
    
    # Fallback to self-signed certificate if Let's Encrypt is not available
    ssl_certificate /usr/local/etc/nginx/ssl/selfsigned.crt;
    ssl_certificate_key /usr/local/etc/nginx/ssl/selfsigned.key;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;

    root /var/www/ttrss;
    index index.php index.html;

    # Logging
    access_log /var/log/nginx/access/ttrss.log;
    error_log /var/log/nginx/error/ttrss.log;

    # Handle PHP files
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:{{ php_fpm_listen }};
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Tiny Tiny RSS specific settings
        fastcgi_param HTTP_PROXY "";
        fastcgi_read_timeout 300;
        fastcgi_connect_timeout 300;
        fastcgi_send_timeout 300;
    }

    # Handle static files
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # Deny access to sensitive files
    location ~ /\. {
        deny all;
    }

    location ~ /(config|cache|feed-icons|lock|plugins|themes)/ {
        deny all;
    }

    # Main location
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
}

