server {
    listen 80;
    listen [::]:80;
    server_name {{ ttrss_domain }};

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ ttrss_domain }};

    # SSL configuration - use Let's Encrypt if available, otherwise self-signed
    {% if letsencrypt_cert_check.stat.exists | default(false) %}
    ssl_certificate /usr/pkg/etc/letsencrypt/live/{{ ttrss_domain }}/fullchain.pem;
    ssl_certificate_key /usr/pkg/etc/letsencrypt/live/{{ ttrss_domain }}/privkey.pem;
    {% else %}
    ssl_certificate /usr/pkg/etc/nginx/ssl/selfsigned.crt;
    ssl_certificate_key /usr/pkg/etc/nginx/ssl/selfsigned.key;
    {% endif %}

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;

    root /usr/pkg/share/tt-rss;
    index index.php index.html;

    # Logging
    access_log /var/log/nginx/ttrss_access.log;
    error_log /var/log/nginx/ttrss_error.log;

    # Handle FreshAPI plugin with PATH_INFO support
    location ~ /plugins\.local/.*/api/.*\.php(/|$) {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        try_files $fastcgi_script_name =404;
        set $path_info $fastcgi_path_info;
        fastcgi_param PATH_INFO $path_info;
        fastcgi_index index.php;
        fastcgi_pass unix:{{ php_fpm_listen }};
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        
        # Tiny Tiny RSS specific settings
        fastcgi_param HTTP_PROXY "";
        fastcgi_read_timeout 300;
        fastcgi_connect_timeout 300;
        fastcgi_send_timeout 300;
    }

    # Handle regular PHP files
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:{{ php_fpm_listen }};
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Tiny Tiny RSS specific settings
        fastcgi_param HTTP_PROXY "";
        fastcgi_read_timeout 300;
        fastcgi_connect_timeout 300;
        fastcgi_send_timeout 300;
    }

    # Handle static files
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # Deny access to sensitive files
    location ~ /\. {
        deny all;
    }

    location ~ /(config|cache|feed-icons|lock|plugins|themes)/ {
        deny all;
    }

    # Main location with authentication
    location / {
        auth_basic "TT-RSS Access";
        auth_basic_user_file /usr/pkg/etc/nginx/.htpasswd_ttrss;
        try_files $uri $uri/ /index.php?$query_string;
    }
}

